    <style name="Ugo.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/Ugo.TextAppearance.Text.B1.Medium</item>
