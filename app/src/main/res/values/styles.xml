    </style>

    <!-- endregion -->

    <!-- region Number -->

    <style name="Ugo.Widget.TextInputLayout.Number" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/stroke_cobalt</item>
        <item name="boxStrokeWidthFocused">@dimen/size_p2</item>
        <item name="boxStrokeWidth">@dimen/size_p2</item>
        <item name="android:layout_marginStart">@dimen/size_p8</item>
        <item name="android:layout_marginEnd">@dimen/size_p8</item>
    </style>

    <style name="Ugo.Widget.EditText.Number" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAppearance">@style/Ugo.TextAppearance.Text.H1.Medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="lineHeight">@null</item>
    </style>

    <style name="Ugo.Widget.TextInputLayout.Message" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">@dimen/size_none</item>
        <item name="boxStrokeWidthFocused">@dimen/size_none</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_p8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_p8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_p8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_p8</item>
        <item name="boxBackgroundColor">@color/lightBlue</item>
    </style>

